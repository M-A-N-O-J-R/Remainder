    const dbtns=document.getElementsByClassName("task");
    for(let i=0; i<dbtns.length; i++)
    {
       let dbtn=dbtns[i];
       dbtn.addEventListener("click",()=>
       {
            const endpoint=dbtn.dataset.doc;
